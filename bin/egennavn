function usage() {
    NAME=$(basename "$0")
    cat <<-EOF
	${NAME}	uses a trained SVM model to find named entities in
	Norwegian (bokmÃ¥l) text.

	Usage:
  	  ${NAME} FILE
  	  ${NAME} -h | --help

	Options:
	  -h --help     Show this screen.
	EOF
}

while [[ "$#" -gt 0 ]]; do
    case "${1}" in
	-h|--help)
	    usage
	    exit 0
	    ;;
	* )
	    FILE="$1"
    esac
    shift
done

CURDIR=$(realpath "${0}")
CURDIR=$(dirname "${CURDIR}")

"${CURDIR}/chunk" "${FILE:-/dev/stdin}" \
    | "${CURDIR}/entities"
